<%- include('../partials/head') %>
<div class="container"> <!-- start container -->
  <!-- Fixed navbar -->
  <%- include('../partials/nav') %>
	
	<div class="row">
		<div class="col-xs-12" style="margin-top: 30px;">
            <div class="col-xs-6" style="margin: 30px 0px;">
                <a class="btn btn-primary" href="/">Home</a>
            </div> 
            <div class="col-xs-6" style="margin: 30px 0px;" > 
                <a class="btn btn-success" href="/admin/products/add">Agregar Productos</a>	
            </div>
            
            <h1>LISTADO DE PRODUCTOS: </h1>
            <br>

            <table class="table table-bordered">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Stock</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                    <% products.map(function(product){ %>
                        <tr>
                          <th scope="row">1</th>
                          <td><%= product.name %></td>
                          <td><img style="width:40px;height: 40px;" src="/img/products/<%= product.img %>" alt="imagen de producto"></td>
                          <td><%= product.price %></td>
                          <td><%= product.stock %></td>
                          <td>
                            <a class="btn btn-success" href="/admin/products/detail/<%=product.id%>"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                            <a class="btn btn-info" href="/admin/products/edit/<%=product.id%>"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                            <form class="inline" onsubmit="return pregunta()" action="/admin/products/delete/<%=product.id%>?_method=DELETE" method="POST">
                               <button class="btn btn-danger" type="submit" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
                            </form>
                          </td>
                        </tr>
                    <% }) %>  
                </tbody>
              </table>
        </div> 
	</div>	

</div> <!-- end container -->
<%- include('../partials/footer') %>